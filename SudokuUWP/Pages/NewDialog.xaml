<ContentDialog
    x:Class="SudokuUWP.Pages.NewGameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="New Game"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox ItemsSource="{x:Bind Sizes}" SelectedItem="{x:Bind X, Mode=TwoWay}" Header="X" Margin="0,0,15,0">
            </ComboBox>
            <ComboBox ItemsSource="{x:Bind Sizes}" SelectedItem="{x:Bind Y, Mode=TwoWay}" Header="Y">
            </ComboBox>
        </StackPanel>
        <ComboBox ItemsSource="{x:Bind Levels}" SelectedItem="{x:Bind Level, Mode=TwoWay}" Header="Level"></ComboBox>
    </StackPanel>
</ContentDialog>
